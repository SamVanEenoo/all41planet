<div id="sign-up">
<h2 class="text-center">Login</h2>
<hr />
  <table class="table borderless">
    <tbody>
      <%= form_tag sessions_path do %>
        <tr>
          <td class="col-6">Email: </td>
          <td class="col-6"><%= text_field_tag :email %></td>
        </tr>
        <tr>
          <td class="col-6">Password</td>
          <td class="col-6"><%= password_field_tag :password %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= submit_tag "Login", class:"btn btn-secondary" %></td>
        </tr>
      <% end -%>
    </tbody>
  </table>
</div>
