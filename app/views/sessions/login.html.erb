<div id="sign-up">
  <h2 class="text-center">Login</h2>
  <hr />

  <%= form_tag sessions_path do %>
    <div class="mb-3 row">
      <%= label_tag 'email', "Email: ", class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= email_field_tag :email, params[:email], class: "form-control", required: true %>
      </div>
    </div>
    <div class="mb-3 row">
      <%= label_tag 'password', "Password: ", class: 'col-sm-2 col-form-label' %>
      <div class='col-sm-10'>
        <%= password_field_tag :password, nil, class: "form-control", required: true %>
      </div>
    </div>
    <%= submit_tag "Login", class:"btn btn-secondary" %>
  <% end -%>
</div>
