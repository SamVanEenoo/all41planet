<!DOCTYPE html>
<html>
  <head>
    <title>All41planet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="min-height-100">


    <% flash.each do |type, msg| %>
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <div class="container">
          <%= msg %>
          <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    <% end %>

    <div class="container margin-bottom-lg margin-top-md">
      <div class="row">
        <div class="col-4">
        </div>
        <div class="col-4 text-center">
          <%= link_to image_tag("all41planet_logo.png", id:"logo"), "/" %>
        </div>
        <div class="col-4 text-right">
          <% if current_user %>
            <div class="dropdown">
              <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
              <%= current_user["first_name"] %> <%= current_user["last_name"] %>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" href="/sessions/logout">Logout</a></li>
              </ul>
            </div>
          <% else %>
            <% unless @login_page %>
            <a href="/sessions/login"><button class="btn btn-secondary">Login</button></a>
            <% end -%>
          <% end %>
        </div>
      </div>
    </div>


    <div class="container">
      <div class="row">
        <div class="col-12 margin-bottom-lg">
          <%= yield %>
        </div>
      </div>
    </div>

<script>
  $('.dropdown-toggle').dropdown()
</script>

  </body>
</html>
